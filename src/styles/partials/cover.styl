#cover
  position: relative
  display: flex
  flex-direction: column
  justify-content: center

  h1
    &, p
      @extend $font-hero

    p
      @extend $font-light

  .headline
    transform: translateY(50%);

  .subline
    @extend $font-hero-subtitle
    opacity: 0
    visibility: hidden

  .mouse-icon
    position: absolute;
    bottom: $spacing.lg
    left: calc(50% - 12px)
    opacity: 0

    +not-desktop()
      display: none

&:not(.locked)
  #cover
    .headline
      animation: cover-headline-movement 2s 1s ease-in-out forwards
    .subline
      animation: cover-subline-entrance 2s 1.2s ease-in-out forwards
    .mouse-icon
      animation: cover-icon-entrance .4s 3.2s ease-in-out forwards,
        cover-icon-movement 1s ease infinite
