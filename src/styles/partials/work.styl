#work
  h2
    @extend $font-project-title


  article
    +desktop()
      &:nth-child(odd)
        .row
          > *:first-child
            margin-left: 0
          > *:last-child
            margin-right: 0

        .title
          order: 1

        .desc
          order: 2

      &:nth-child(even)
        .row
          > *:first-child
            margin-right: 0
          > *:last-child
            margin-left: 0

        .title
          order: 2

        .desc
          order: 1

  .row
    margin-bottom: $spacing.xhg

    +not-desktop()
      > *
        margin-left: 0
        margin-right: 0

  hr
    margin: $spacing.xxhg 0

  @import gallery
