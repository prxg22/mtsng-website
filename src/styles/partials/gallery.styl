.gallery
  position: relative

  .gallery__container
    display: flex
    position: relative
    flex-direction: row
    overflow-x: auto
    max-width: 100%

    img
      w = s('calc(100% - %s)', $spacing.xxhg)
      width: 100%
      max-width: w
      flex: 1 0 w
      margin-right: $spacing.lg

      +hd()
        w = s('calc(50% - %s)', $spacing.xxhg)
        max-width: w

  button
    position: absolute
    t = s('calc(50% - %s)', $spacing.hg / 2)
    top: t
    color: $grey-01
    background-color: $white-01
    box-shadow: 1px 1px 3px $grey-02
    text-align: center
    border-radius: 50%
    font-size: 24px
    width: $spacing.hg
    height: $spacing.hg
    outline-style:

    &.prev
      left: 10px
      animation: gallery_button_prev_move .2s ease-in-out, gallery_button_visibility .2s ease-in-out

    &.next
      right: 10px
      animation: gallery_button_next_move .2s ease-in-out, gallery_button_visibility .2s ease-in-out
