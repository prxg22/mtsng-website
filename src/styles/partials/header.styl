animation_time = .24s
animation_delay = .04s
logo_size = 111px

active =
  min-height: 100%

  #logo
    margin-bottom: $spacing.xxhg


header
  background-color: $white-01
  display: flex
  flex-direction: column
  box-sizing: border-box
  -webkit-overflow-scrolling: hidden
  overflow-y: hidden

  padding-top: $spacing.md
  z-index: 9999
  width: 100%

  #logo
    width: logo_size

    svg
      width: logo_size
      height: 39px

  #menu_btn
    z-index: 99999
    position: absolute
    top: $spacing.md
    right: $spacing.xs
    padding: $spacing.xs
    outline: none;

    svg
      width: 18px;
      height: 10px;

      path
        transform-origin: center;

  .nav_container
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    overflow-y: scroll;
    -webkit-overflow-scrolling: touch

    nav
      margin-top: $spacing.hg
      margin-bottom: $spacing.xhg

      li
        margin-bottom: $spacing.md

        &:last-child
          margin-bottom: 0

        a
          @extend $font-light
          @extend $font-nav-anchor

    #social
      flex-direction: column
      justify-content: space-between
      margin-top: auto
      margin-bottom: $spacing.hg

      h4, ul
        margin-bottom: $spacing.md

      ul
        li
          @extend $font-light
          margin-bottom: $spacing.sm

  +mobile()
    max-height: 68px
    position: fixed
    max-width: calc(100% - 24px);

    &.open
      padding-top: $spacing.md
      animation: menu_entrance animation_time ease-in-out forwards

      .nav_container
        animation: nav_container_entrance animation_time animation_delay ease-in-out forwards

      #menu_btn
        half = animation_time / 2
        svg
          path
            &:nth-child(1)
              animation: transform-close-button-first-line (animation_time)s ease forwards
            &:nth-child(2)
              animation: transform-close-button-middle-line (half)s ease forwards
            &:nth-child(3)
              animation: transform-close-button-last-line (animation_time)s ease forwards

    &.close
      animation: menu_exit animation_time ease-in-out forwards

      .nav_container
        animation: nav_container_exit animation_time ease-in-out forwards

      #menu_btn
        svg
          path
            &:nth-child(1)
              animation: transform-open-button-first-line (animation_time)s ease forwards
            &:nth-child(2)
              animation: transform-open-button-middle-line (half)s ease forwards
            &:nth-child(3)
              animation: transform-open-button-last-line (animation_time)s ease forwards


  +tablet()
    padding-top: $spacing.xxhg
    {active}

    #menu_btn
      display: none
