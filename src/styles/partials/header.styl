header
  background-color: $white-01
  display: flex
  flex-direction: column
  box-sizing: border-box

  padding-top: $spacing.md
  position: fixed
  z-index: 9999
  width: 100%

  #logo
    svg
      width: 111px
      height: 39px

  // nav, #social
  //   display: none

  nav
    margin-top: $spacing.hg
    margin-bottom: $spacing.xhg

    li
      margin-bottom: $spacing.md

      &:last-child
        margin-bottom: 0

      a
        font-weight: 100
        font-size: 24px
        line-height: 26px

  #social
    flex-direction: column
    justify-content: space-between
    margin-top: auto
    margin-bottom: $spacing.hg

    h4, ul
      margin-bottom: $spacing.md

    h4
      font-size: 14px

    ul
      li
        font-weight: 100
        margin-bottom: $spacing.sm


  +tablet()
    height: 100%
    padding-top: $spacing.xxhg
    position: static

    #logo
      margin-bottom: $spacing.xxhg

    nav
      display: block

    #social
      display: flex
