.preview-container
  position: relative
  display: flex
  align-items: center
  justify-content: center
  position: fixed
  width: 100%
  height: 100%
  z-index: 99999
  padding: $spacing.xxhg $spacing.xhg
  box-sizing: border-box

  background-color: rgba(0, 0, 0, 0.7)

  animation: preview-container-entrance .42s ease

  .label
    position: absolute
    bottom: $spacing.xxlg
    color: white
    @extend $font-bold



  img
    width: auto
    height: auto
    max-width: 100%
    max-height: 100%

