$font-default
  font-family: 'Graphik'
  color: $font-01
  letter-spacing: -0.12px
  font-size: 14px

$font-bold
  font-weight: 600

$font-light
  font-weight: 100

$font-hero
  @extend $font-bold
  font-size: 48px
  letter-spacing: -0.4px

$font-hero-subtitle
  color: $font-2

$font-title
  @extend $font-bold

$font-project-title
  @extend $font-bold
  font-size: 32px
  letter-spacing: -0.36px

$font-nav-anchor
  font-size: 24px
  line-height: 26px
